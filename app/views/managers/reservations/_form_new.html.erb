<% if reservation.errors.any? %>
<div id="error_explanation" class="notification is-danger is-light">
  <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

  <ul>
    <% reservation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="card">
  <div class="card-content">

    <div class="field is-horizontal">
      <div class="field-label is-normal">Space</div>
      <div class="field-body">
        <div class="field has-addons is-grouped is-grouped-multiline">
          <div class="control">
            <%= form.collection_select :space_id, spaces,
                      :id, :space_name, {selected: reservation.space.id},
                      {class: 'select'} %>
            <p class="help">Required</p>
            <%= error_message_on(form.object, :space_id) %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'form_event',  form: form, reservation: reservation,
                              events: events %>

    <div class="field is-horizontal">
      <div class="field-label is-normal">Umdze / Koord.</div>
      <div class="field-body">
        <div class="field has-addons">
          <div class="control has-icons-left">
            <%= form.text_field :host_name, placeholder: "Umdze / Koord. (wenn bekannt)", class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
            <p class="help">Optional</p>
            <%= error_message_on(form.object, :host_name) %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'form_start_end',  form: form, reservation: reservation %>

    <%= render 'form_repeating',  form: form, reservation: reservation %>

    <div class="field is-horizontal">
      <div class="field-label is-normal">Notice</div>
      <div class="field-body">
        <div class="field has-addons is-grouped is-grouped-multiline">
          <div class="control">
            <%= form.text_area :alert_notice, class: "textarea" %>
            <p class="help">Changes or needed info about the event.</p>
            <%= error_message_on(form.object, :alert_notice) %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
