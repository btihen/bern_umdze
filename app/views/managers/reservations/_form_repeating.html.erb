<div class="field is-horizontal">
  <div class="field-label is-normal">Repeats</div>
  <div class="field-body">

    <div class="box">

    <div class="field has-addons is-grouped">
      <div class="control has-addons">
        <%= form.collection_select :access_role,
                Managers::ReservationForm.frequency_units_list,
                :value, :display_name, {include_blank: 'Not Repeating',
                                        selected: reservation.frequency_unit || ''},
                class: 'select is-medium' %>
        <p class="help">Frequency</p>
        <%= error_message_on(form.object, :access_role) %>
      </div>
      <!--
      <div class="control">
        <%# form.number_field :frequency_every, class: "input", style: "width: 33%;" %>
        <p class="help">Every</p>
        <%# error_message_on(form.object, :frequency_every) %>
      </div>
      -->
    </div>
  <br>
    <div class="field has-addons is-grouped">
      <div class="control has-addons">
        <%= form.collection_select :frequency_ordinal,
                Managers::ReservationForm.frequency_ordinals_list,
                :value, :display_name, {include_blank: 'Select Week',
                                        selected: reservation.frequency_ordinal || ''},
                class: 'select is-medium' %>
        <p class="help">on Week</p>
        <%= error_message_on(form.object, :frequency_ordinal) %>
      </div>
    </div>
  <br>
    <div class="field has-addons is-grouped">
      <div class="control has-addons">
        <%= form.collection_select :frequency_weekday,
                Managers::ReservationForm.frequency_weekdays_list,
                :value, :display_name, {include_blank: 'Select Weekday',
                                        selected: reservation.frequency_weekday || ''},
                class: 'select is-medium' %>
        <p class="help">on Weekday</p>
        <%= error_message_on(form.object, :frequency_week_day) %>
      </div>
    </div>

  </div>

  </div>
</div>